{
  "builds": [
    {
      "src": "Portal/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "Portal/dist"
      }
    },
    {
      "src": "LandingPage/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "LandingPage/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/landing/(.*)",
      "dest": "/LandingPage/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/Portal/dist/$1"
    }
  ]
}
